<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FlourSync.APP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FlourSync.APP"
    Shell.FlyoutBehavior="Disabled"
    Title="FlourSync.APP">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent 
        Title="Menu" 
        ContentTemplate="{DataTemplate local:MenuPage}" 
        Route="MenuPage" />

    <ShellContent 
        Title="Categories"
        ContentTemplate="{DataTemplate local:DummyPageCategories}" 
        Route="DummyPageCategories"/>

</Shell>
